{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@fake-company/auth": ["shared/auth/src/index.ts"],
      "@fake-company/common-ui": ["shared/common-ui/src/index.ts"],
      "@fake-company/types": ["shared/types/src/index.ts"],
      "@fake-company/utils": ["shared/utils/src/index.ts"]
    }
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/test-utils.tsx", "**/storybook-decorators.tsx"]
}
