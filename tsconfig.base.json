{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "remote_pets/*": ["remote/pets/src/*"],
      "remote_nav/*": ["remote/nav/src/*"],
      "@pet-tracker/auth": ["shared/auth/src/index.ts"],
      "@pet-tracker/common-ui": ["shared/common-ui/src/index.ts"],
      "@pet-tracker/types": ["shared/types/src/index.ts"],
      "@pet-tracker/utils": ["shared/utils/src/index.ts"]
    }
  }
}
