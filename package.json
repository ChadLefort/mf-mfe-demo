{
  "name": "pet-tracker-mfe",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "shared/*"
    ]
  },
  "scripts": {
    "start": "concurrently -p \"none\" \"lerna run start --parallel --stream\" \"yarn json-server\"",
    "json-server": "json-server ./tools/json-server/index.js --watch --routes ./tools/json-server/routes.json --port 4000 --delay 1000"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@babel/runtime": "^7.12.5",
    "@types/node": "13.13.40",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "5.1.6",
    "@types/webpack": "4.41.26",
    "@types/webpack-dev-server": "3.11.1",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-eslint": "^10.0.0",
    "babel-loader": "8.2.2",
    "bundle-loader": "0.5.6",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.8.3",
    "eslint": "^7.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testing-library": "^3.9.0",
    "fork-ts-checker-webpack-plugin": "6.1.0",
    "html-webpack-plugin": "5.0.0-beta.6",
    "husky": "4.3.8",
    "import-sort-style-module": "^6.0.0",
    "json-server": "^0.16.3",
    "lerna": "^3.22.1",
    "lint-staged": "10.5.3",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "ts-node": "9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "4.1.3",
    "webpack": "5.19.0",
    "webpack-cli": "4.4.0",
    "webpack-dev-server": "3.11.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
